{
  "license": "MIT",
  "scripts": {
    "lint": "phplint ./ --exclude=vendor --no-cache boot.php",
    "phpcs": "phpcs --extensions=php --standard=phpcs.xml boot.php",
    "phpcbf": "phpcbf --extensions=php --standard=phpcs.xml boot.php",
    "test": "./vendor/bin/pest --testdox"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "overtrue/phplint": "^4.1"
  },
  "require": {
    "rhukster/dom-sanitizer": "^1.0.7 "
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
